<resources>

    <style name="ToolbarTheme" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark_dark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textViewStyle">@style/common_text_big_dark_dark</item>
        <item name="android:textAppearance">@style/common_text_big_dark_dark</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:buttonStyle">@style/common_button_text_style</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark_dark</item>
        <item name="android:textColorHint">@color/common_hint_text_color</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="subHeaderTextColor">@color/common_text_dark_color_dark</item>
        <item name="menuItemColor">@color/ic_menu_color_dark</item>
        <item name="menuBackground">@drawable/menu_gradient_dark</item>
        <item name="tabsColor">@color/common_text_dark_color_dark</item>
        <item name="alertDialogColor">@color/alert_dialog_color_dark</item>
        <item name="headerBackground">@drawable/address_toolbar_gradient_black</item>
        <item name="colorPrimaryPicked">@color/colorPrimary_dark</item>
        <item name="sentColorPicked">@color/sent_color_picked_dark</item>
        <item name="cardBackground">@color/cardDarkColor</item>
        <item name="initialBackground">@drawable/initial_background_black</item>
        <item name="addressStatusBarColor">@color/addresses_status_bar_color_black</item>
        <item name="actionOverflowMenuStyle">@style/popupOverflowMenu</item>
        <item name="listPopupWindowStyle">@style/myListPopupWindow</item>
    </style>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:textViewStyle">@style/common_text_big_dark</item>
        <item name="android:textAppearance">@style/common_text_big_dark</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:buttonStyle">@style/common_button_text_style</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/common_hint_text_color</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="subHeaderTextColor">@color/common_text_dark_color</item>
        <item name="menuItemColor">@color/ic_menu_color</item>
        <item name="menuBackground">@drawable/menu_gradient</item>
        <item name="tabsColor">@color/address_tab_text_color</item>
        <item name="alertDialogColor">@color/colorPrimary</item>
        <item name="headerBackground">@drawable/address_toolbar_gradient</item>
        <item name="colorPrimaryPicked">@color/colorPrimary</item>
        <item name="sentColorPicked">@color/sent_color_picked</item>
        <item name="cardBackground">@color/colorPrimary</item>
        <item name="initialBackground">@drawable/initial_background</item>
        <item name="addressStatusBarColor">@color/addresses_status_bar_color</item>
        <item name="actionOverflowMenuStyle">@style/popupOverflowMenu</item>
        <item name="listPopupWindowStyle">@style/myListPopupWindow</item>
    </style>

    <style name="PopupMenu" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/common_text_color</item>
        <item name="android:textColorSecondary">?attr/alertDialogColor</item>
        <item name="android:textColor">@color/common_text_color</item>
        <item name="android:colorBackground">?attr/alertDialogColor</item>
<!--        <item name="android:popupBackground">@drawable/popupmenu_background</item>-->
    </style>

    <style name="popupOverflowMenu" parent="@style/Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@drawable/popupmenu_background</item>
        <item name="listPopupWindowStyle">@style/myListPopupWindow</item>
    </style>

    <style name="myListPopupWindow" parent="Widget.MaterialComponents.PopupMenu.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popupmenu_background</item>
    </style>

