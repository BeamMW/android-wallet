                        android:topRightRadius="10dp"
                        android:bottomLeftRadius="10dp"
                        android:bottomRightRadius="10dp"/>
                    <padding android:bottom="3dp" android:left="8dp" android:right="8dp" android:top="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item app:state_accent="false" app:state_error="false" app:state_normal="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid
                        android:color="#0cffffff"/>
                    <size
                        android:height="48dp"/>
                    <corners
                        android:topLeftRadius="10dp"
                        android:topRightRadius="10dp"
                        android:bottomLeftRadius="10dp"
                        android:bottomRightRadius="10dp"/>
                    <padding android:bottom="3dp" android:left="8dp" android:right="8dp" android:top="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item app:state_accent="false" app:state_error="false" app:state_normal="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid
                        android:color="#0cffffff"/>
                    <size
                        android:height="48dp"/>
                    <corners
                        android:topLeftRadius="10dp"
                        android:topRightRadius="10dp"
                        android:bottomLeftRadius="10dp"
                        android:bottomRightRadius="10dp"/>
                    <padding android:bottom="3dp" android:left="8dp" android:right="8dp" android:top="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
