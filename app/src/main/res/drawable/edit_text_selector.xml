<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item app:state_accent="false" app:state_error="true" app:state_normal="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid
                        android:color="#26ff625c"/>
                    <size
                        android:height="48dp"/>
                    <corners
                        android:topLeftRadius="10dp"
                        android:topRightRadius="10dp"
                        android:bottomLeftRadius="10dp"
                        android:bottomRightRadius="10dp"/>
                    <padding android:bottom="3dp" android:left="8dp" android:right="8dp" android:top="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item app:state_accent="true" app:state_error="false" app:state_normal="false">
        <layer-list>
            <item>
